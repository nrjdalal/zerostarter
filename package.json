{
  "name": "the-saas-starter",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "api/*",
    "packages/*",
    "web/*"
  ],
  "scripts": {
    "build": "turbo build --summarize",
    "check-types": "turbo check-types --summarize",
    "clean": "bunx rimraf --glob \"**/.next\" \"**/.turbo\" \"**/dist\" \"**/node_modules\"",
    "db:generate": "bun --cwd packages/db drizzle-kit generate",
    "db:migrate": "bun --cwd packages/db drizzle-kit migrate",
    "db:push": "bun --cwd packages/db drizzle-kit push",
    "db:studio": "bun --cwd packages/db drizzle-kit studio",
    "predev": "turbo build --filter=@packages/*",
    "dev": "turbo dev --ui tui",
    "format": "prettier --write --ignore-unknown *",
    "postinstall": "bun .github/scripts/deps-manager.ts",
    "lint": "turbo lint --summarize",
    "prepare": "bunx simple-git-hooks",
    "start": "turbo start"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged --verbose && bun run build",
    "commit-msg": "bunx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "prettier --write --ignore-unknown"
    ],
    "package.json": [
      "bun .github/scripts/deps-manager.ts",
      "sort-package-json"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "globby": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "simple-git-hooks": "catalog:",
    "sort-package-json": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "bun@1.3.3",
  "catalog": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@hono/zod-validator": "^0.7.5",
    "@hookform/resolvers": "^5.2.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@remixicon/react": "^4.7.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-form": "^1.26.0",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "better-auth": "^1.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "embla-carousel-react": "^8.6.0",
    "globby": "^16.0.0",
    "hono": "^4.10.7",
    "input-otp": "^1.4.2",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.555.0",
    "next": "^16.0.6",
    "next-themes": "^0.4.6",
    "oxlint": "^1.30.0",
    "postgres": "^3.4.7",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-day-picker": "^9.11.3",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.67.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "2.15.4",
    "simple-git-hooks": "^2.13.1",
    "sonner": "^2.0.7",
    "sort-package-json": "^3.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4",
    "tsdown": "^0.16.8",
    "turbo": "^2.6.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
