{
  "name": "@api/hono",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "check-types": "turbo build --filter=@packages/auth && tsc --noEmit",
    "dev": "concurrently \"bun build src/index.ts --outdir dist --target bun --watch\" \"bun --hot src/index.ts\"",
    "format": "prettier --write --ignore-unknown *",
    "lint": "oxlint",
    "start": "bun dist/index.js"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "oxlint"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "prettier": {
    "importOrder": [
      "<BUILTIN_MODULES>",
      "",
      "^hono/(.*)$|^hono$",
      "^@hono/(.*)$|^@hono$",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@/types/(.*)$",
      "^@/db/(.*)$",
      "^@/lib/(.*)$",
      "^@/middlewares/(.*)$",
      "^@/routers/(.*)$",
      "",
      "^[./]"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "printWidth": 100,
    "semi": false
  },
  "dependencies": {
    "@hono/zod-validator": "catalog:",
    "@packages/auth": "workspace:*",
    "@packages/env": "workspace:*",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@packages/tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "concurrently": "catalog:",
    "typescript": "catalog:"
  }
}
